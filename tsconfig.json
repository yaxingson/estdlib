{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",

    "moduleResolution":"bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "declarationMap":false
  },
  "include":["lib/**/*.ts", "index.ts"],
  "exclude":["node_modules", "dist"]
}
