{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib":["es2020"],

    "moduleResolution":"node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "outDir":"dist",
    "declaration":false
  },
  "include":["lib/**/*.ts", "perf/**/*.ts"]
}
